<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.aulang.job.admin.dao.JobUserDao">

  <sql id="allColumns">
    `id`, `username`, `password`, `role`, `permission`
  </sql>

  <select id="findByUserName" resultType="cn.aulang.job.admin.model.po.JobUser">
    select <include refid="allColumns"/> from job_user where username = #{username}
  </select>

  <select id="findBy" resultType="cn.aulang.job.admin.model.po.JobUser">
    select `id`, `username`, `role`, `permission` from job_user
    <where>
      <if test="username != null and username != ''">
        <bind name="username" value="'%' + username + '%'"/>
        and `username` like #{username}
      </if>
      <if test="role != null">
        and `role` = #{role}
      </if>
    </where>
    order by username asc
  </select>
</mapper>